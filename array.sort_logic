<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Higher Order LOOPS</title>
</head>
<body>
    <div>Output</div>
    <script>

        //QUE3: customise map method
        // to return a new array
        let arr = [1,2,3]

        let arr1 = [1,2,3,4,5]
        let arr2 = [7,8,9]

        let arr3 = []

        for(let i=0; (i<arr1.length) || (i<arr2.length);i++){
            arr3.push(arr1[i])
            arr3.push(arr2[i])


            if (arr1[i] !== 0){arr3.push(arr1[i])}
            if  (arr2[i] != 0){arr3.push(arr2[i])}
        }

        console.log(arr3);

    </script>
</body>
</html>
